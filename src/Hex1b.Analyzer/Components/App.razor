@using Hex1b.Analyzer.Components

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hex1b Analyzer</title>
    <base href="/" />
    <HeadOutlet />
    <style>
        body {
            margin: 0;
            padding: 20px;
            background-color: #1e1e1e;
            color: #d4d4d4;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }
        h1 {
            margin-bottom: 20px;
            font-size: 1.5rem;
        }
        .terminal-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .terminal-frame {
            border: 1px solid #444;
            border-radius: 4px;
            overflow: hidden;
            background: #1e1e1e;
        }
        .terminal-frame img {
            display: block;
            max-width: 100%;
            height: auto;
        }
        .status {
            font-size: 0.875rem;
            color: #888;
        }
    </style>
</head>
<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
</body>
</html>
