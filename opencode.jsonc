{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "aspire": {
      "type": "local",
      "command": [
        "aspire",
        "agent",
        "mcp"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  }
}